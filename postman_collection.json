{
"info": {
"name": "Digital Bank BFF v1",
"_postman_id": "b8b1b1b1-1111-2222-3333-abcdefabcdef",
"description": "BFF endpoints for Digital Bank (v1). Set {{baseUrl}} and {{token}} variables.",
"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
},
"variable": [
{ "key": "baseUrl", "value": "http://localhost:4000/api/v1" },
{ "key": "token", "value": "" }
],
"auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{token}}", "type": "string" } ] },
"item": [
{
"name": "Auth",
"item": [
	{ "name": "Register", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/auth/register", "body": { "mode": "raw", "raw": "{\n \"name\": \"Alex\",\n \"email\": \"a@x.com\",\n \"phone_number\": \"+12025550199\",\n \"password\": \"Passw0rd!\"\n}" } } },
	{ "name": "Login", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/auth/login", "body": { "mode": "raw", "raw": "{\n \"email\": \"a@x.com\",\n \"password\": \"Passw0rd!\"\n}" } } },
	{ "name": "2FA verify", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/auth/2fa/verify", "body": { "mode": "raw", "raw": "{\n \"code\": \"123456\"\n}" } } },
{ "name": "Me", "request": { "method": "GET", "url": "{{baseUrl}}/me" } },
	{ "name": "Update profile", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/me", "body": { "mode": "raw", "raw": "{\n \"name\": \"Alex J\",\n \"phone_number\": \"+12025550000\"\n}" } } },
	{ "name": "Change password", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/auth/change-password", "body": { "mode": "raw", "raw": "{\n \"current_password\": \"Old!\",\n \"new_password\": \"New!23\"\n}" } } },
{ "name": "Sessions list", "request": { "method": "GET", "url": "{{baseUrl}}/auth/sessions" } },
{ "name": "Revoke session", "request": { "method": "DELETE", "url": "{{baseUrl}}/auth/sessions/{{sessionId}}" } },
{ "name": "Revoke all sessions", "request": { "method": "DELETE", "url": "{{baseUrl}}/auth/sessions" } },
{ "name": "2FA enable", "request": { "method": "POST", "url": "{{baseUrl}}/auth/2fa/enable" } },
	{ "name": "2FA disable", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/auth/2fa/disable", "body": { "mode": "raw", "raw": "{\n \"code\": \"123456\"\n}" } } },
{ "name": "Backup codes", "request": { "method": "GET", "url": "{{baseUrl}}/auth/2fa/backup-codes" } },
	{ "name": "KYC submit", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/kyc/submit", "body": { "mode": "raw", "raw": "{\n \"document_type\": \"passport\",\n \"document_number\": \"P123\",\n \"issue_date\": \"1999-01-01\",\n \"expiry_date\": \"2030-01-01\"\n}" } } },
{ "name": "KYC status", "request": { "method": "GET", "url": "{{baseUrl}}/kyc/status" } },
{ "name": "Notification prefs (get)", "request": { "method": "GET", "url": "{{baseUrl}}/notification-prefs" } },
	{ "name": "Notification prefs (update)", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/notification-prefs", "body": { "mode": "raw", "raw": "{\n \"email_enabled\": true,\n \"sms_enabled\": true,\n \"low_balance_threshold\": 200\n}" } } }
]
},
{
"name": "Accounts",
"item": [
{ "name": "Accounts list", "request": { "method": "GET", "url": "{{baseUrl}}/accounts" } },
{ "name": "Account detail", "request": { "method": "GET", "url": "{{baseUrl}}/accounts/{{accountId}}" } },
