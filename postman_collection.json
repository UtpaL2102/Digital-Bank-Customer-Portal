	{ "name": "Decline request", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/admin/limit-requests/{{limitRequestId}}/decline", "body": { "mode": "raw", "raw": "{\n \"note\": \"Insufficient docs\"\n}" } } },
