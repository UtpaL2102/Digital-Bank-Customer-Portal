{ "name": "Transaction detail", "request": { "method": "GET", "url": "{{baseUrl}}/transactions/{{transactionId}}" } },
{ "name": "Statements list", "request": { "method": "GET", "url": "{{baseUrl}}/statements?accountId={{accountId}}" } },
	{ "name": "Generate statement", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/statements", "body": { "mode": "raw", "raw": "{\n \"account_id\": \"{{accountId}}\",\n \"date_from\": \"2025-07-01\",\n \"date_to\": \"2025-07-31\",\n \"format\": \"PDF\",\n \"delivery\": \"both\"\n}" } } },
{ "name": "Get statement", "request": { "method": "GET", "url": "{{baseUrl}}/statements/{{statementId}}" } },
{ "name": "Notifications list", "request": { "method": "GET", "url": "{{baseUrl}}/notifications" } },
{ "name": "Mark notification read", "request": { "method": "POST", "url": "{{baseUrl}}/notifications/{{notificationId}}/read" } },
{ "name": "Mark all read", "request": { "method": "POST", "url": "{{baseUrl}}/notifications/read-all" } },
{ "name": "Beneficiaries list", "request": { "method": "GET", "url": "{{baseUrl}}/beneficiaries" } },
	{ "name": "Add beneficiary", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/beneficiaries", "body": { "mode": "raw", "raw": "{\n \"name\": \"John Doe\",\n \"bank_name\": \"DB Main\",\n \"account_number\": \"00112233\",\n \"ifsc_swift\": \"DBIN0001\",\n \"currency\": \"INR\"\n}" } } },
	{ "name": "Update beneficiary", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/beneficiaries/{{beneficiaryId}}", "body": { "mode": "raw", "raw": "{\n \"name\": \"John D\",\n \"is_active\": true\n}" } } },
{ "name": "Delete beneficiary", "request": { "method": "DELETE", "url": "{{baseUrl}}/beneficiaries/{{beneficiaryId}}" } },
{ "name": "Limits (per account)", "request": { "method": "GET", "url": "{{baseUrl}}/limits?accountId={{accountId}}" } },
	{ "name": "Submit limit request", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/limit-requests", "body": { "mode": "raw", "raw": "{\n \"account_id\": \"{{accountId}}\",\n \"requested_daily_limit\": 7500,\n \"requested_monthly_limit\": 30000,\n \"reason\": \"Higher payroll\"\n}" } } },
{ "name": "My limit requests", "request": { "method": "GET", "url": "{{baseUrl}}/limit-requests" } },
{ "name": "Loans list", "request": { "method": "GET", "url": "{{baseUrl}}/loans" } },
{ "name": "Loan detail", "request": { "method": "GET", "url": "{{baseUrl}}/loans/{{loanId}}" } },
{ "name": "Loan schedule", "request": { "method": "GET", "url": "{{baseUrl}}/loans/{{loanId}}/schedule" } }
]
},
{
"name": "Transfers",
"item": [
	{ "name": "Create internal transfer", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Idempotency-Key", "value": "00000000-0000-4000-8000-000000000001" } ], "url": "{{baseUrl}}/transfer", "body": { "mode": "raw", "raw": "{\n \"from_account_id\": \"{{accountId}}\",\n \"to_account_id\": \"{{toAccountId}}\",\n \"amount\": 500,\n \"description\": \"Monthly transfer\"\n}" } } },
	{ "name": "Create external transfer", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Idempotency-Key", "value": "00000000-0000-4000-8000-000000000002" } ], "url": "{{baseUrl}}/transfer", "body": { "mode": "raw", "raw": "{\n \"from_account_id\": \"{{accountId}}\",\n \"to_beneficiary_id\": \"{{beneficiaryId}}\",\n \"amount\": 500,\n \"description\": \"Rent\"\n}" } } },
{ "name": "Scheduled transfers list", "request": { "method": "GET", "url": "{{baseUrl}}/scheduled-transfers" } },
	{ "name": "Create scheduled transfer", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/scheduled-transfers", "body": { "mode": "raw", "raw": "{\n \"from_account_id\": \"{{accountId}}\",\n \"to_account_id\": \"{{toAccountId}}\",\n \"amount\": 500,\n \"frequency\": \"monthly\",\n \"next_run_at\": \"2025-09-01T09:00:00Z\"\n}" } } },
	{ "name": "Update scheduled transfer", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/scheduled-transfers/{{scheduledId}}", "body": { "mode": "raw", "raw": "{\n \"amount\": 600,\n \"frequency\": \"monthly\",\n \"next_run_at\": \"2025-10-01T09:00:00Z\"\n}" } } },
{ "name": "Pause scheduled transfer", "request": { "method": "POST", "url": "{{baseUrl}}/scheduled-transfers/{{scheduledId}}/pause" } },
{ "name": "Resume scheduled transfer", "request": { "method": "POST", "url": "{{baseUrl}}/scheduled-transfers/{{scheduledId}}/resume" } },
{ "name": "Cancel scheduled transfer", "request": { "method": "DELETE", "url": "{{baseUrl}}/scheduled-transfers/{{scheduledId}}" } }
]
},
{
"name": "Admin",
"item": [
{ "name": "List limit requests", "request": { "method": "GET", "url": "{{baseUrl}}/admin/limit-requests" } },
