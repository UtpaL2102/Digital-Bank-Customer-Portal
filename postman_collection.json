	{ "name": "Update branch", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" } ], "url": "{{baseUrl}}/admin/branches/{{branchId}}", "body": { "mode": "raw", "raw": "{\n \"address\": \"New address\"\n}" } } },
{ "name": "Delete branch", "request": { "method": "DELETE", "url": "{{baseUrl}}/admin/branches/{{branchId}}" } },
{ "name": "Audit logs", "request": { "method": "GET", "url": "{{baseUrl}}/admin/audit-logs?page=1" } }
]
}
