{
  "name": "digital-bank",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently \"pnpm -C packages/auth-service dev\" \"pnpm -C packages/account-service dev\" \"pnpm -C packages/bff dev\" \"pnpm -C python/chatbot-service dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "pnpm -r format",
    "dev:bff": "pnpm -C packages/bff dev",
    "dev:auth": "pnpm -C packages/auth-service dev",
    "dev:account": "pnpm -C packages/account-service dev",
    "migrate:auth": "pnpm -C packages/auth-service migrate",
    "migrate:account": "pnpm -C packages/account-service migrate",
    "db:reset": "pnpm -C packages/auth-service db:reset && pnpm -C packages/account-service db:reset",
    "postinstall": "pnpm -w exec prisma generate"
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@digital-bank/common/*": [
        "packages/common/src/*"
      ]
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,js,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.20.5"
  },
  "dependencies": {
    "husky": "^9.1.7",
    "prisma": "^5.22.0",
    "tsyringe": "^4.10.0",
    "uuid": "^12.0.0"
  }
}
